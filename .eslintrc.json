{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    },
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "warn", 4
        ],
        "no-empty-function": "off",
        "no-empty": "off",
        "no-var": "off",
        "no-unused-vars": "off",
        "react/prop-types": "off",
        "react/display-name": "off"
    }
}